<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/fbutton_color_clouds"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/discroll_view"
    android:layout_centerVertical="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_gravity="center_horizontal"
            android:id="@+id/loadingpicture"
            android:layout_width="300dp"
            android:layout_height="300dp"
            style="@style/AVLoadingIndicatorView"
            android:visibility="gone"
            app:indicatorName="BallGridPulseIndicator"
            app:indicatorColor="@color/fbutton_color_concrete"
            />
        <TextView
            android:layout_marginBottom="40dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:shadowColor="#71000000"
            android:shadowDx="30"
            android:shadowDy="10"
            android:shadowRadius="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pod_title"
            android:textSize="50sp"
            android:textAppearance="@color/fbutton_color_turquoise"
            android:text="@string/loading"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone"
            />

        <ImageView
            android:background="@drawable/image_border"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:id="@+id/picture_of_the_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_marginTop="50dp"
            android:visibility="gone"
            android:id="@+id/pod_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/fbutton_color_midnight_blue"
            android:textSize="20sp"
            android:lineSpacingExtra="5sp"
            />
</LinearLayout>


</ScrollView>
</RelativeLayout>